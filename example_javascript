// LOGIN
const myHeaders = new Headers();
myHeaders.append("Content-Type", "application/json");

const raw = JSON.stringify({
  "credentials": {
    "token": "{YOUR_ACCESS_TOKEN}",
    "key": "{YOUR_SECRET_KEY}"
  }
});

const requestOptions = {
  method: "POST",
  headers: myHeaders,
  body: raw,
  redirect: "follow"
};

fetch("https://tamsys.org/webapi/v1/api.php/login/auth", requestOptions)
  .then((response) => response.text())
  .then((result) => console.log(result))
  .catch((error) => console.error(error));

// TEST
const myHeaders = new Headers();
myHeaders.append("Content-Type", "application/json");
myHeaders.append("Authorization", "Bearer {YOUR_BEARER_TOKEN}");

const raw = JSON.stringify({
  "credentials": {
    "token": "{YOUR_ACCESS_TOKEN}",
    "key": "{YOUR_SECRET_KEY}"
  }
});

const requestOptions = {
  method: "POST",
  headers: myHeaders,
  body: raw,
  redirect: "follow"
};

fetch("https://tamsys.org/webapi/v1/api.php/Login/test", requestOptions)
  .then((response) => response.text())
  .then((result) => console.log(result))
  .catch((error) => console.error(error));
